<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_back"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_alarm" />

        <TextView
            android:id="@+id/ttime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:hint="00:00"
            android:textColor="#FA131212"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:background="#C80DA9EB"
            android:fontFamily="@font/getinfo"
            android:text="time  t1" />

        <TextView
            android:id="@+id/ttime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:hint="00:00"
            android:textColor="#FC0A0A0A"
            android:textSize="36dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:background="#C80DA9EB"
            android:fontFamily="@font/getinfo"
            android:text="time  t2" />

        <TextView
            android:id="@+id/ttime3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:hint="00:00"
            android:textColor="#F7030303"
            android:textSize="36dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="70dp"
            android:background="#C80DA9EB"
            android:fontFamily="@font/getinfo"
            android:text="time  t3" />


        <Button
            android:id="@+id/time8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="70dp"
            android:background="#C80DA9EB"
            android:fontFamily="@font/getinfo"
            android:text="save times" />


        <Button
            android:id="@+id/reset1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:background="#C6090808"
            android:fontFamily="@font/getinfo"
            android:onClick="reset"
            android:text="reset time"
            android:textColor="#D2DD1515" />
    </LinearLayout>
</ScrollView>